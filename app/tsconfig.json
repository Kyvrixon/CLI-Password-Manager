{
	"compilerOptions": {
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"target": "esnext",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"noImplicitAny": true,
		"allowJs": true,
		"checkJs": false,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"incremental": false,
		"rootDir": ".",
		"baseUrl": "."
	},
	"include": ["./src/**/*", "./types/**/*"],
	"exclude": ["node_modules", "app/dist", "eslint.config.js", "_archive"]
}
